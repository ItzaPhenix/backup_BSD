set nocompatible
syntax on
execute pathogen#infect()
set backspace=2
set laststatus=2
set shiftwidth=4
set softtabstop=4
set tabstop=8
set expandtab
set smarttab
set number
set textwidth=79
set wrap
set listchars=tab:>-,trail:-
set list!
set colorcolumn=80
set cursorline
set background=dark
let g:solarized_termcolors=256
let g:solarized_visibility = "high"
let g:solarized_contrast = "high"
colorscheme solarized

filetype plugin indent on
